<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <title>Edit User</title>
  </head>
  <body>
    <div class="container col-6 border border-dark text-center">
      <h1>Edit User</h1>
      <form action="" method="post" id="edit-form">
        <div class="mb-2 col-6">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            value="<%= user.name %>"
            id="name"
            name="name"
          />
        </div>
        <div class="mb-3 col-6">
          <label for="email" class="form-label">Email address</label>
          <input
            type="text"
            class="form-control"
            value="<%= user.email%>"
            id="email"
            name="email"
          />
        </div>
        <div class="mb-3 col-6">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="number" class="form-control" value="<%= user.mobile%>""
          id="phone" name="Mobile" />
        </div>
        <input type="hidden" name="id" value="<%= user._id %>" />
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/admin/dashboard" class="btn btn-dark">Cancel</a>
      </form>
    </div>

    <script>
      const form = document.getElementById("edit-form");

      const mobileRegex = /^\d{10}$/;
      const nameRegex = /^[a-zA-Z0-9]{3,20}$/;

      const emailRegex = /^\S+@\S+\.\S+$/;

      form.addEventListener("submit", (event) => {
        event.preventDefault();
        const nameed = document.getElementById("name").value;
        const emailed = document.getElementById("email").value;
        const mobileed = document.getElementById("phone").value;

        if (!nameRegex.test(nameed)) {
          alert("Please enter a valid name.");
          // namein.focus();
          return;
        }

        if (!emailRegex.test(emailed)) {
          //  = "please enter a valid email";
          alert("please enter a valid email");
          // emailin.focus();
          return;
        }
        if (!mobileRegex.test(mobileed)) {
          alert("Please enter a valid 10-digit mobile number.");
          // mobilein.focus();
          return;
        }
        form.submit();
      });
    </script>
  </body>
</html>
